<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" prefHeight="228.0" prefWidth="398.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/8" fx:controller="tksundar.mqtt.client.MQTTApplicationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
       <HBox prefWidth="200"  alignment="CENTER">
              <TextField text="Enter Broker URL" fx:id="brokerAddress" alignment="CENTER" prefHeight="25.0"  />
       </HBox>
       <HBox alignment="CENTER" prefWidth="100" >

       <Button onAction="#connect" text="Connect" />
           <Label prefWidth="10"/>
       <Button onAction="#disconnect" text="Disconnect"/>
       </HBox>
   </children>
</VBox>
